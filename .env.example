# Shield Core Environment Variables
# Copy this file to .env and fill in your values
# Use double underscores (__) for nested config sections

# ============================================================
# Server Configuration
# ============================================================
SHIELD_SERVER__HOST=127.0.0.1
SHIELD_SERVER__PORT=8080

# ============================================================
# Database Configuration
# ============================================================
SHIELD_DATABASE__URL=sqlite:shield.db?mode=rwc

# ============================================================
# Authentication
# ============================================================
SHIELD_AUTH__ENABLED=false
SHIELD_AUTH__JWT_SECRET=your-secure-jwt-secret-key-here
SHIELD_AUTH__JWT_ISSUER=shield-core
SHIELD_AUTH__TOKEN_DURATION_HOURS=24

# ============================================================
# LLM Integration (Llama Guard via OpenRouter)
# ============================================================
SHIELD_LLM__ENABLED=false
SHIELD_LLM__OPENROUTER_API_KEY=sk-or-v1-your-api-key-here
SHIELD_LLM__GUARD_MODEL=meta-llama/llama-guard-4-12b
SHIELD_LLM__TIMEOUT_SECS=10

# ============================================================
# Safety Thresholds
# ============================================================
SHIELD_SAFETY__MAX_AUTO_AMOUNT=100.0
SHIELD_SAFETY__HITL_THRESHOLD=1000.0
SHIELD_SAFETY__MAX_TRANSFERS_PER_HOUR=3
