# Shield Core Environment Variables
# Copy this file to .env and fill in your values
#
# Environment variable format: SHIELD_{SECTION}_{KEY}=value
# Example: SHIELD_SERVER_PORT=3000 sets server.port
#
# NOTE: For keys containing underscores (like openrouter_api_key),
# use config/local.yaml instead of env vars.

# ============================================================
# Server Configuration
# ============================================================
SHIELD_SERVER_HOST=127.0.0.1
SHIELD_SERVER_PORT=8080

# ============================================================
# Database Configuration  
# ============================================================
SHIELD_DATABASE_URL=sqlite:shield.db?mode=rwc

# ============================================================
# Authentication
# ============================================================
SHIELD_AUTH_ENABLED=false
# For jwt_secret, use config/local.yaml (contains underscore)

# ============================================================
# LLM Integration (Llama Guard via OpenRouter)
# ============================================================
SHIELD_LLM_ENABLED=false
# For openrouter_api_key, use config/local.yaml:
#   llm:
#     enabled: true
#     openrouter_api_key: "sk-or-v1-xxx"

# ============================================================
# Safety Thresholds (use config/local.yaml for these)
# ============================================================
# max_auto_amount: 100.0
# hitl_threshold: 1000.0
# max_transfers_per_hour: 3
